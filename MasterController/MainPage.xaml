<Page
    x:Class="MasterController.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MasterController"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel x:Name="Buttons" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            </StackPanel>
            <TextBlock x:Name="StatusText" Text="Status: Initializing...." Margin="10,50,10,10" TextAlignment="Center" FontSize="26.667" />
            <TextBlock x:Name="DebugText" Text="" Margin="10,50,10,10" TextAlignment="Center" FontSize="26.667" />
            <TextBox x:Name="DisplayText" HorizontalAlignment="Center" Margin="0,5,0,0" Text="Hello SPI!" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="32" Width="350" Height="48"/>

        </StackPanel>
    </Grid>
</Page>
